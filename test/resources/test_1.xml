<project>

    <meta>
        <name>Project Creator</name>
            <!-- The name of the src. Should be in title case. Will
            have spaces removed & capitalization added to generate the
            root folder name. For example "Project Creator" would become
            the folder "ProjectCreator"-->
        <root_dir>/Users/Michael/prog/python/python3</root_dir>
        <date>
            <month>10</month>
            <day>5</day>
            <year>2018</year>
        </date>
        <license>MIT</license>
        <contributors>Michael Newman, OTHER CONTR., COMMA SEPARATED</contributors>

        <short_description>
            A programming project creation utility
        </short_description>

        <long_description>A programming project creation utility designed to
            parse some file &amp; directory template (XML, JSON, etc.) into
            a physical folder structure on a machine.
        </long_description>
    </meta>

    <language>
        <type>Python</type>
        <version>3.7</version>
        <frameworks/>
        <libraries>anytree</libraries>
        <requirements>anytree, unittest</requirements>
    </language>

    <auto_generate>
        <text_files>requirements</text_files>
        <rst_files>readme, license, contributors</rst_files>
        <folders>test</folders>
    </auto_generate>

    <git>
        <username/>
        <password/>
        <branches>
            <branch/>
        </branches>
        <remotes>
            <remote/>
        </remotes>
        <import>
            <url/>
        </import>
    </git>

    <sync/>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~HIERARCHY~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <folder_root type="folder">
        <src type="folder" />

        <test type="folder">
            <context type="file">
                <extension>py</extension>
                <import_strategy>rv</import_strategy>
                <import_args>./resources/python/test_context.py --var {PROJECT_NAME=PROJECT_NAME}</import_args>
            </context>
        </test>

        <venv type="folder" git="False"/>

        <docs type="folder"/>

        <resources type="folder"/>

        <logs type="folder"/>

        <design type="folder">
            <agile type="folder">

                <project_backlog type="file">
                    <extension>rst</extension>
                    <header>Project Backlog</header>
                </project_backlog>

                <sprint_backlog type ="file">
                    <extension>rst</extension>
                    <header>Sprint Backlog</header>
                    <text>#. design</text>
                </sprint_backlog>
            </agile>
            <plan type="file">
                <extension>rst</extension>
            </plan>
        </design>
    </folder_root>
</project>