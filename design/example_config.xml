<project>
    <info>
        <name>Project Creator</name>
            <!-- The name of the project. Should be in title case. Will have
            spaces removed & capitalization added to generate the root folder
            name. For example "Project Creator" would become the folder
            "ProjectCreator"
             -->
        <rootdir>/Users/Michael/prog/python/python3</rootdir>
        <date>2018-10-16</date>
        <license>MIT</license>
        <contributors>
            <contributor>Michael Newman</contributor>
        </contributors>
    </info>

    <git>
        <public>true</public>
        <login>
            <username></username>
            <password></password>
        </login>
        <remotes>
            <remote>URL PATH</remote>
            <remote>FILE PATH</remote>
        </remotes>
        <branches>
            <branch>dev</branch>
            <branch>feature</branch>
        </branches>
    </git>

    <folders>
        <folder name="design">
            <root />
                <!-- defining the root this way implies that the folder
                should go in the root dir -->
            <git>true</git>
        </folder>
        <folder name="strategy">
            <root>design</root>
                <!-- defining the root this way implies that the folder
                should go in root/design-->
            <git>true</git>
        </folder>
    </folders>

    <autofiles>
        <file>
            <title></title>
            <filename></filename>
            <extension></extension>
            <text></text>
            <import></import>
            <dir></dir>
            <git></git>
        </file>

    </autofiles>

    <files>
        <file>
            <title>Read Me</title>
            <filename>README</filename>
                <!-- Notation for a file whose title & file name differ -->
            <extension>rst</extension>
            <header>true</header>
            <text />
            <dir />
                <!--a file in the *root dir*-->
            <git>true</git>
        </file>

        <file>
            <name>outline</name>
            <filename />
                <!-- Notation for a file whose title & file name **are the
                same**-->
            <extension>rst</extension>
            <header>true</header>
            <text />
            <dir>design</dir>
                <!-- a file in the design dir -->
            <git>true</git>
        </file>

        <file>
            <name>project backlog</name>
            <extension>rst</extension>
            <header>true</header>
            <text />
            <dir>design/agile</dir>
                <!-- a file in the design/agile dir -->
            <git>true</git>
        </file>
    </files>

    <sync>
        <remote>
            <path/>
            <login>
                <username/>
                <password/>
            </login>
        </remote>
        <dir>DIRECT PATH</dir>
    </sync>
</project>