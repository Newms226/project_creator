            have spaces removed & capitalization added to generate the
            root folder name. For example "Project Creator" would become
            the folder "ProjectCreator"-->
        <root_dir>/Users/Michael/prog/python/python3</root_dir>
        <date>
            <month>10</month>
            <day>5</day>
            <year>2018</year>
        </date>
        <license>MIT</license>
        <contributors>
            <contributor>Michael Newman</contributor>
        </contributors>
        <short_description/>
        <long_description/>
    </meta>

    <language>
        <type>Python</type>
        <version>3.7</version>
        <frameworks/>
        <libraries/>
        <requirements>
            <requirement>anytree</requirement>
        </requirements>
    </language>

    <auto_generate>
        <readme type="file">
            <extension>rst</extension>
        </readme>

        <license type="file">
            <extension>rst</extension>
        </license>

        <contributors type="file">
            <extension>rst</extension>
        </contributors>
    </auto_generate>

    <git>
        <username/>
        <password/>
        <branches>
            <branch/>
        </branches>
        <remotes>
            <remote/>
        </remotes>
        <import>
            <url/>
        </import>
    </git>

    <sync/>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~HIERARCHY~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <folder_root type="folder">
        <src type="folder" />

        <tests type="folder" />

        <design type="folder">
            <agile type="folder">

                <project_backlog type="file">
                    <extension>rst</extension>
                    <header>Project Backlog</header>
                </project_backlog>

                <sprint_backlog type ="file">
                    <extension>rst</extension>
                    <header>Sprint Backlog</header>
                    <text>#. design</text>
                </sprint_backlog>

                <past_sprints type="folder">

                </past_sprints>

            </agile>

            <examples type="folder">

            </examples>

            <strategy type="folder">

            </strategy>
        </design>

        <venv type="folder" git="false">

        </venv>

        <logs type="folder">

        </logs>

        <bin type="folder" git="false" />

        <ref type="folder" />

        <resources type="folder" />

        <config type="folder">
            <xml_config type="file" git="false">
                <extension>xml</extension>
            </xml_config>
        </config>

        <README type="file">
            <extension>txt</extension>
        </README>

        <LICENSE type="import">
            <path>resources/MIT.rst</path>
            <extension>rst</extension>
        </LICENSE>
    </folder_root>
</project>